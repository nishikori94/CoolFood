<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/storeNamePO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLA BLA BLA BLA BLA" />

            <TextView
                android:id="@+id/orderDatePO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/storeNamePO"
                android:layout_alignStart="@+id/storeNamePO"
                android:text="order date" />

            <ImageButton
                android:id="@+id/reviewOrderButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/storeNamePO"
                android:layout_alignBottom="@+id/orderDatePO"
                android:src="@drawable/baseline_add_comment_black_24dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:padding="0dp"
                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>