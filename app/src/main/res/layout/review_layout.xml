<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textColor="@color/colorTextIcons"
                android:textStyle="bold"
                android:background="@color/colorPrimaryLight"
                android:padding="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_page"
                android:paddingEnd="@dimen/padding_page"
                >

                <ImageButton
                    android:id="@+id/starButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:src="@drawable/baseline_star_black_18dp"
                    android:tint="@color/yellow" />

                <ImageButton
                    android:id="@+id/starButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:src="@drawable/baseline_star_black_18dp"
                    android:tint="@color/yellow" />

                <ImageButton
                    android:id="@+id/starButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:src="@drawable/baseline_star_black_18dp"
                    android:tint="@color/yellow" />

                <ImageButton
                    android:id="@+id/starButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:src="@drawable/baseline_star_black_18dp"
                    android:tint="@color/yellow" />

                <ImageButton
                    android:id="@+id/starButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:src="@drawable/baseline_star_black_18dp"
                    android:tint="@color/yellow" />

            </LinearLayout>

            <TextView
                android:id="@+id/reviewTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="reviews"
                android:paddingStart="@dimen/padding_page"
                android:paddingEnd="@dimen/padding_page"
                android:textColor="@color/colorTextIcons"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>